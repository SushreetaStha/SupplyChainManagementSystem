@model SupplyChainManagement.ViewModels.Suppliers.SupplierCreateViewModel;

@{
}

<div class="page page--form">
    <div class="page-title d-flex align-items-center gap-3">
        <h3>Edit Supplier</h3>
    </div>
    <form class="form" method="post" asp-controller="Suppliers" asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="SupplierCode" class="form-label">Supplier Code</label>
            <input type="text" class="form-control" asp-for="SupplierCode" placeholder="Supplier Code">
            <span class="text-danger" asp-validation-for="SupplierCode"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SupplierName" class="form-label">Supplier Name</label>
            <input type="text" class="form-control" asp-for="SupplierName" placeholder="Supplier Name">
            <span class="text-danger" asp-validation-for="SupplierName"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Date" class="form-label">Date</label>
            <input type="date" class="form-control" asp-for="Date">
            <span class="text-danger" asp-validation-for="Date"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Contact" class="form-label">Contact</label>
            <input type="text" class="form-control" asp-for="Contact" placeholder="Contact">
            <span class="text-danger" asp-validation-for="Contact"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" placeholder="Address">
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Edit Supplier</button>
            <button type="reset" class="btn btn-danger">Clear</button>
        </div>
    </form>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
 }
}
